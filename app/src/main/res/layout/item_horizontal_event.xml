<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="@dimen/dp_120"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/global"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_name_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_event"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_mine_shaft"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_description_event"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/image_event"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name_event"
            app:layout_constraintBottom_toTopOf="@+id/image_date"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_mine_shaft"/>

        <ImageView
            android:id="@+id/image_date"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_event"/>

        <TextView
            android:id="@+id/text_date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_date"/>

        <ImageView
            android:id="@+id/image_joiner"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text_date_event"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_group_black_24dp"/>

        <TextView
            android:id="@+id/text_joiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_joiner"/>

        <ImageView
            android:id="@+id/image_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
