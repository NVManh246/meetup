<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        app:title="@string/login"
        app:titleTextColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_50"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_30"
        android:hint="@string/email"
        android:padding="@dimen/dp_20"
        android:textSize="@dimen/dp_20"
        android:text="nvmanhopb@gmail.com"
        android:textColor="@color/color_mine_shaft"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:backgroundTint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:padding="@dimen/dp_20"
        android:hint="@string/password"
        android:text="YWhSELCr"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/color_mine_shaft"
        android:inputType="textPassword"
        android:maxLines="1"
        android:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_30"
        android:text="@string/login"
        android:textAllCaps="false"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/white"
        android:background="@drawable/background_button_login"
        android:enabled="false"/>

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_under_line"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/color_mine_shaft"/>

    <ProgressBar
        android:id="@+id/progress_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/button_login"
        app:layout_constraintRight_toRightOf="@+id/button_login"
        app:layout_constraintTop_toTopOf="@+id/button_login"
        app:layout_constraintBottom_toBottomOf="@+id/button_login"
        android:visibility="gone"
        android:elevation="@dimen/dp_8"
        android:indeterminateTint="@android:color/white"/>

</android.support.constraint.ConstraintLayout>
