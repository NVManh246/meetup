<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/text_title_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_news"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/color_mine_shaft"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_date"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_title_news"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/text_public_date_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/image_date"
            app:layout_constraintBottom_toBottomOf="@+id/image_date"
            app:layout_constraintLeft_toRightOf="@id/image_date"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_tundora" />

        <ImageView
            android:id="@+id/image_author"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/text_title_news"
            app:layout_constraintLeft_toRightOf="@id/text_public_date_news"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_author_black_24dp"
            />

        <TextView
            android:id="@+id/text_author_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_author"
            app:layout_constraintBottom_toBottomOf="@id/image_author"
            app:layout_constraintLeft_toRightOf="@+id/image_author"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="@string/n_a"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_tundora" />

        <ImageView
            android:id="@+id/image_feed"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_link_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_title_news"
            app:layout_constraintLeft_toRightOf="@+id/text_author_news"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/text_feed_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/image_feed"
            app:layout_constraintBottom_toBottomOf="@id/image_feed"
            app:layout_constraintLeft_toRightOf="@+id/image_feed"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_tundora" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
