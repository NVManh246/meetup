<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/global"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dp_5"/>

        <TextView
            android:id="@+id/text_name_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_event"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/color_mine_shaft"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_description_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/text_name_event"
            android:textColor="@color/color_mine_shaft"
            android:textSize="@dimen/sp_16"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/image_date"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_description_event"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/text_date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/image_date"
            app:layout_constraintBottom_toBottomOf="@+id/image_date"
            app:layout_constraintLeft_toRightOf="@id/image_date"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_tundora" />

        <ImageView
            android:id="@+id/image_joiner"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/text_description_event"
            app:layout_constraintLeft_toRightOf="@id/text_date_event"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_group_black_24dp"
            />

        <TextView
            android:id="@+id/text_joiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_joiner"
            app:layout_constraintBottom_toBottomOf="@id/image_joiner"
            app:layout_constraintLeft_toRightOf="@+id/image_joiner"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_tundora" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
