<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_mine_shaft"
        android:padding="@dimen/dp_15"/>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_alert"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_alto"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_ok"
        android:background="?attr/selectableItemBackground"
        android:text="@string/cancel"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/color_mine_shaft"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line_two"
        app:layout_constraintLeft_toRightOf="@+id/button_cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/ok"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/dp_10"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_line_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/color_alto"/>

</android.support.constraint.ConstraintLayout>
